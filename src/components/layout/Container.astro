---
interface Props {
  size?: 'default' | 'narrow' | 'wide';
  class?: string;
}

const { size = 'default', class: className } = Astro.props;

const sizeClasses = {
  default: 'max-w-container',
  narrow: 'max-w-narrow',
  wide: 'max-w-[1440px]',
};
---

<div class:list={['mx-auto px-6 lg:px-10', sizeClasses[size], className]}>
  <slot />
</div>
