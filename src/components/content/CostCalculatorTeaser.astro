---
import Badge from '@components/ui/Badge.astro';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const mockInputs = [
  { label: 'Data Stored (TB)', placeholder: '50' },
  { label: 'Monthly Queries', placeholder: '10,000' },
  { label: 'AI Workload Intensity', placeholder: 'Medium' },
];
---

<div class:list={['relative', className]}>
  {/* Ambient glow */}
  <div class="absolute -inset-4 bg-glow-steel/10 rounded-full blur-[120px] pointer-events-none ambient-glow"></div>

  <div class="relative glass-card p-8">
    <div class="mb-6">
      <Badge>COMING SOON</Badge>
    </div>

    <div class="space-y-4">
      {mockInputs.map((input) => (
        <div>
          <label class="block text-body-sm text-content-secondary mb-1.5">{input.label}</label>
          <div class="w-full px-4 py-3 rounded-card-sm bg-tint/5 border border-surface-border text-content-muted text-body-md opacity-50 cursor-not-allowed select-none">
            {input.placeholder}
          </div>
        </div>
      ))}
    </div>

    <button
      disabled
      class="mt-6 w-full inline-flex items-center justify-center gap-2 px-6 py-3.5 text-body-md font-medium rounded-button bg-tint/8 border border-surface-border text-content-muted opacity-50 cursor-not-allowed"
    >
      Calculate Savings
    </button>
  </div>
</div>
