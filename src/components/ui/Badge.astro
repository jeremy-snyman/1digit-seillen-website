---
interface Props {
  variant?: 'default' | 'accent';
  class?: string;
}

const { variant = 'default', class: className } = Astro.props;

const variantClasses = {
  default: 'bg-tint/8 text-content-secondary border-surface-border',
  accent: 'bg-glow-steel/20 text-content border-glow-steel/30',
};
---

<span class:list={[
  'inline-flex items-center gap-1.5 px-3 py-1 text-label-md uppercase tracking-wider rounded-badge border',
  variantClasses[variant],
  className,
]}>
  <svg width="10" height="10" viewBox="0 0 16 16" fill="currentColor" class="opacity-70" style="animation: sparkle-rotate 6s linear infinite;" aria-hidden="true">
    <path d="M8 0l1.5 5.5L16 8l-6.5 2.5L8 16l-1.5-5.5L0 8l6.5-2.5z" />
  </svg>
  <slot />
</span>
