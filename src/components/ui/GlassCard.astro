---
interface Props {
  hover?: boolean;
  padding?: 'sm' | 'md' | 'lg' | 'none';
  class?: string;
  tag?: string;
}

const {
  hover = false,
  padding = 'md',
  class: className,
  tag = 'div',
} = Astro.props;

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const Tag = tag as any;
---

<Tag class:list={[
  hover ? 'glass-card-hover' : 'glass-card',
  paddingClasses[padding],
  className,
]}>
  <slot />
</Tag>
