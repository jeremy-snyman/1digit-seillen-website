---
interface Props {
  columns?: 2 | 3;
  class?: string;
}

const { columns = 2, class: className } = Astro.props;

const gridClass = columns === 3
  ? 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6'
  : 'grid grid-cols-1 md:grid-cols-2 gap-8';
---

<div class:list={[gridClass, className]}>
  <slot />
</div>
