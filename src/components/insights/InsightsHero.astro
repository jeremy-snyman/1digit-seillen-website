---
import Badge from '@components/ui/Badge.astro';
import Container from '@components/layout/Container.astro';
import Section from '@components/layout/Section.astro';
import ScrollReveal from '@components/interactive/ScrollReveal.astro';
---

<Section class="relative pt-32 pb-20 overflow-hidden">
  <!-- Dual ambient glow orbs -->
  <div class="absolute top-1/3 left-1/4 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[400px] bg-glow-steel/12 rounded-full blur-[120px] pointer-events-none" aria-hidden="true" style="animation: glow-breathe 8s ease-in-out infinite;"></div>
  <div class="absolute top-1/2 right-1/4 translate-x-1/2 -translate-y-1/2 w-[400px] h-[350px] bg-[rgba(130,90,200,0.08)] rounded-full blur-[100px] pointer-events-none" aria-hidden="true" style="animation: glow-breathe 8s ease-in-out 3s infinite;"></div>

  <Container>
    <div class="max-w-3xl mx-auto text-center relative z-10">
      <ScrollReveal>
        <Badge variant="accent">Insights</Badge>
      </ScrollReveal>
      <ScrollReveal delay={80}>
        <h1 class="text-display-md lg:text-display-lg font-display font-medium mt-6 mb-6 text-content">
          Latest Insights
        </h1>
      </ScrollReveal>
      <ScrollReveal delay={160}>
        <p class="text-body-lg text-content-secondary max-w-2xl mx-auto">
          Structured perspectives on AI readiness, architecture, governance and platform economics â€” published for enterprise leaders and technical decision-makers.
        </p>
      </ScrollReveal>
    </div>
  </Container>
</Section>
