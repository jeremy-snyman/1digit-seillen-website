---
import GlassCard from '@components/ui/GlassCard.astro';
import Button from '@components/ui/Button.astro';
import { getCtaConfig } from '@lib/insights';

interface Props {
  ctaType: string;
}

const { ctaType } = Astro.props;
const cta = getCtaConfig(ctaType);
---

<div class="my-16">
  <GlassCard padding="lg" class="text-center">
    <h3 class="text-heading-md font-semibold mb-2 text-content">{cta.heading}</h3>
    <p class="text-body-md text-content-secondary mb-6 max-w-lg mx-auto">{cta.description}</p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <Button variant="primary" size="md" href={cta.primaryHref}>{cta.primaryLabel}</Button>
      <Button variant="outline" size="md" href={cta.secondaryHref}>{cta.secondaryLabel}</Button>
    </div>
  </GlassCard>
</div>
