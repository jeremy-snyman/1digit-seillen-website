---
import { formatInsightDateShort, categorySlug } from '@lib/insights';

interface Props {
  title: string;
  thesis: string;
  slug: string;
  publishDate: string;
  category: string;
  researchType: string;
  readTimeMinutes: number;
  coverImage?: string | null;
}

const { title, thesis, slug, publishDate, category, readTimeMinutes, coverImage } = Astro.props;
const catSlug = categorySlug(category);
const badgeClass = `cat-badge-${catSlug}`;
const gradientClass = `cat-gradient-${catSlug}`;
---

<a href={`/insights/${slug}`} class="group block h-full">
  <article class="glass-card-hover h-full flex flex-col overflow-hidden relative">
    <!-- Gradient hover overlay -->
    <div class:list={[gradientClass, 'absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none rounded-[16px] z-0']} aria-hidden="true"></div>

    <!-- Content area -->
    <div class="relative z-10 p-6 flex-1 flex flex-col">
      <!-- Category pill + date -->
      <div class="flex items-center gap-3 mb-4">
        <span class:list={[badgeClass, 'px-2.5 py-1 rounded-full text-xs font-medium']}>{category}</span>
        <span class="text-body-sm text-content-muted">{formatInsightDateShort(publishDate)}</span>
      </div>

      <!-- Title -->
      <h3 class="text-heading-md font-display font-semibold mb-3 text-content group-hover:text-glow-blue transition-colors leading-snug">
        {title}
      </h3>

      <!-- Thesis excerpt -->
      <p class="text-body-sm text-content-secondary flex-1 mb-5 line-clamp-3">{thesis}</p>

      <!-- Read time + arrow -->
      <div class="flex items-center justify-between pt-4 border-t border-surface-border/[var(--alpha-surface-border)]">
        <span class="text-body-sm text-content-muted">{readTimeMinutes} min read</span>
        <span class="text-glow-blue text-sm font-medium inline-flex items-center gap-1 group-hover:gap-2 transition-all duration-300">
          Read <span class="text-xs">&rarr;</span>
        </span>
      </div>
    </div>

    <!-- Image area -->
    <div class="mx-4 mb-4 h-48 rounded-xl overflow-hidden">
      {coverImage ? (
        <img
          src={coverImage}
          alt=""
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
          loading="lazy"
        />
      ) : (
        <div class:list={[gradientClass, 'w-full h-full flex items-center justify-center bg-surface-elevated']}>
          <div class="w-16 h-16 rounded-full bg-surface-overlay/60 flex items-center justify-center">
            <svg class="w-6 h-6 text-content-muted/40" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909M3.75 21h16.5A2.25 2.25 0 0022.5 18.75V5.25A2.25 2.25 0 0020.25 3H3.75A2.25 2.25 0 001.5 5.25v13.5A2.25 2.25 0 003.75 21z" />
            </svg>
          </div>
        </div>
      )}
    </div>
  </article>
</a>
