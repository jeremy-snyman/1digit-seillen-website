---
interface Props {
  tags: string[];
  activeTag?: string;
  basePath?: string;
}

const { tags, activeTag, basePath = '/insights' } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  <a
    href={basePath}
    class:list={[
      'px-4 py-2 rounded-full text-sm font-medium transition-colors border',
      !activeTag
        ? 'bg-surface-elevated text-content border-content/20'
        : 'bg-tint/5 text-content-secondary border-surface-border hover:border-tint/20',
    ]}
  >
    All
  </a>
  {tags.map((tag) => (
    <a
      href={`${basePath}?tag=${encodeURIComponent(tag)}`}
      class:list={[
        'px-4 py-2 rounded-full text-sm font-medium transition-colors border',
        activeTag === tag
          ? 'bg-surface-elevated text-content border-content/20'
          : 'bg-tint/5 text-content-secondary border-surface-border hover:border-tint/20',
      ]}
    >
      {tag}
    </a>
  ))}
</div>
