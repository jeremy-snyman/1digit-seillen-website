---
import Logo from './Logo.astro';
import Button from '@components/ui/Button.astro';
import Container from '@components/layout/Container.astro';
import { SITE } from '@lib/constants';
---

<footer class="relative border-t border-surface-border">
  <!-- CTA Section -->
  <div class="relative py-section overflow-hidden">
    <!-- Subtle gradient background -->
    <div class="absolute inset-0 bg-gradient-to-b from-surface to-surface-elevated"></div>

    <div class="relative max-w-container mx-auto px-6 lg:px-8 text-center">
      <p class="text-body-sm text-content font-medium mb-4">Available for projects</p>
      <h2 class="font-display text-display-md lg:text-display-lg max-w-4xl mx-auto mb-8" style="font-style: italic;">
        Ready to make your data work for AI? Let's build something extraordinary.
      </h2>
      <Button href="/contact" variant="primary" size="lg">
        Book a Free Call
      </Button>

      <!-- Social Links -->
      <div class="flex items-center justify-center gap-6 mt-12">
        <a href={SITE.social.linkedin} target="_blank" rel="noopener noreferrer" class="text-content-muted hover:text-content transition-colors" aria-label="LinkedIn">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5"/><path d="M8 11v5M8 8v.01M12 16v-5c0-1.5 1-2 2-2s2 .5 2 2v5"/></svg>
        </a>
        <span class="text-surface-border">|</span>
        <a href={SITE.social.twitter} target="_blank" rel="noopener noreferrer" class="text-content-muted hover:text-content transition-colors" aria-label="X (Twitter)">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4l6.5 8L4 20h2l5.5-6.5L16 20h4l-6.5-8L20 4h-2l-5.5 6.5L8 4H4z"/></svg>
        </a>
        <span class="text-surface-border">|</span>
        <a href={SITE.social.github} target="_blank" rel="noopener noreferrer" class="text-content-muted hover:text-content transition-colors" aria-label="GitHub">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/></svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-surface-border py-6">
    <div class="max-w-container mx-auto px-6 lg:px-8 flex flex-col sm:flex-row items-center justify-between gap-4 text-body-xs text-content-muted">
      <p>&copy; {new Date().getFullYear()} {SITE.name}. All rights reserved.</p>
      <nav class="flex items-center gap-6" aria-label="Legal">
        <a href="/privacy" class="hover:text-content transition-colors">Privacy Policy</a>
        <a href="/terms" class="hover:text-content transition-colors">Terms of Service</a>
      </nav>
    </div>
  </div>
</footer>
