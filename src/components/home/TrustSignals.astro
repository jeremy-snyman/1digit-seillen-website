---
import Section from '@components/layout/Section.astro';
import Container from '@components/layout/Container.astro';
import Icon from '@components/ui/Icon.astro';
import ScrollReveal from '@components/interactive/ScrollReveal.astro';

const signals = [
  { icon: 'shield', label: 'Secure SDLC' },
  { icon: 'lock', label: 'Governance Frameworks' },
  { icon: 'check', label: 'ISO 27001 Awareness' },
  { icon: 'globe', label: 'GDPR Compliant' },
  { icon: 'chart', label: 'Risk Modelling' },
];
---

<Section padding="sm">
  <Container>
    <ScrollReveal>
      <div class="flex flex-wrap items-center justify-center gap-8 md:gap-12">
        {signals.map((signal) => (
          <div class="flex items-center gap-3 text-content-muted">
            <div class="w-10 h-10 rounded-full bg-surface-subtle flex items-center justify-center">
              <Icon name={signal.icon} size={18} />
            </div>
            <span class="text-body-sm font-medium">{signal.label}</span>
          </div>
        ))}
      </div>
    </ScrollReveal>
  </Container>
</Section>
