---
import Layout from './Layout.astro';
import Header from '@components/global/Header.astro';
import Footer from '@components/global/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  noIndex?: boolean;
  canonicalUrl?: string;
  type?: 'website' | 'article';
  publishDate?: string;
  author?: string;
}

const props = Astro.props;
---

<Layout {...props}>
  <Header />
  <main id="main-content">
    <slot />
  </main>
  <Footer />
</Layout>
